---
import Layout from '../layouts/Layout.astro';
import AboutSection from '../components/AboutSection.astro';
import FAQSection from '../components/FAQSection.astro';
import ServiceCard from '../components/ServiceCard.astro'; // Nueva Card
import MagicInput from '../components/MagicInput.astro'; // Nuevo Input
import SocialLinks from '../components/SocialLinks.astro'; // Nuevas Redes

const services = [
  {
    title: "Velocidad Extrema (Astro)",
    description: "Sitios web ultrarrápidos construidos con Astro. Rendimiento optimizado y SEO de primera clase.",
    image: "/img/feature-speed.png"
  },
  {
    title: "Seguridad Incluida (ASIR)",
    description: "Protección contra hackeos básicos y configuración HTTPS obligatoria. Estándares de seguridad ASIR.",
    image: "/img/feature-security.png"
  },
  {
    title: "Soporte Cercano",
    description: "Trato directo con los desarrolladores. Sin intermediarios. Comunicación clara y técnica.",
    image: "/img/feature-design.png"
  }
];
---

<Layout title="Byit - Desarrollo Web Seguro y Rápido">
    
    <!-- NAVBAR -->
    <nav class="fixed top-0 w-full z-50 border-b border-white/5 bg-background/60 backdrop-blur-xl">
        <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
            <div class="flex items-center gap-2 group cursor-pointer">
                <img src="/img/favicon.png" alt="Logo Byit" class="w-8 h-8 object-contain transition-transform group-hover:scale-110" />
                <span class="font-semibold text-lg text-white tracking-tight">Byit</span>
            </div>
            <!-- MENÚ ESCRITORIO -->
            <div class="hidden md:flex items-center gap-8 text-sm font-medium text-textMuted">
                <a href="#servicios" class="hover:text-white transition-colors">Servicios</a>
                <a href="#quienes-somos" class="hover:text-white transition-colors">Nosotros</a>
                <a href="#contacto" class="hover:text-white transition-colors">Contacto</a>
            </div>
            
            <!-- BOTÓN ANIMADO "HOVER ME" ADAPTADO -->
            <div class="btn-container-uiverse">
                <a href="#contacto" class="button-uiverse">Solicitar Auditoría</a>
            </div>
        </div>
    </nav>

    <main class="relative pt-32 pb-20 px-4 sm:px-6">
        
        <!-- HERO SECTION -->
        <section id="hero" class="max-w-5xl mx-auto text-center flex flex-col items-center mb-32 relative group">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-primary/20 blur-[100px] rounded-full opacity-30 animate-pulse-slow pointer-events-none"></div>

            <div class="relative z-10 inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-[11px] uppercase tracking-wider font-semibold text-primary mb-8 backdrop-blur-md shadow-lg">
                <span class="w-1.5 h-1.5 rounded-full bg-primary animate-pulse"></span>
                Web Development 2.0
            </div>

            <h1 class="relative z-10 text-5xl md:text-7xl font-bold tracking-tight text-white mb-6 leading-tight">
                Tu negocio, <br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-orange-400">a la velocidad de la luz.</span>
            </h1>

            <p class="relative z-10 text-lg text-textMuted max-w-2xl mb-10 leading-relaxed font-light">
                En <strong>Byit</strong> creamos experiencias digitales de alto rendimiento. Ingeniería pura para resultados reales.
            </p>

            <div class="relative z-10 mt-4">
                <div class="btn-container-uiverse scale-110">
                    <a href="#contacto" class="button-uiverse">Empezar Proyecto</a>
                </div>
            </div>

            <!-- BROWSER MOCKUP -->
            <div class="mt-20 relative w-full max-w-4xl animate-float perspective-1000">
                <div class="relative bg-[#0A0A0A] border border-white/10 rounded-xl overflow-hidden shadow-2xl">
                    <div class="h-9 border-b border-white/5 flex items-center px-4 gap-2 bg-white/[0.02]">
                        <div class="flex gap-1.5">
                            <div class="w-2.5 h-2.5 rounded-full bg-[#FF5F57]"></div>
                            <div class="w-2.5 h-2.5 rounded-full bg-[#FEBC2E]"></div>
                            <div class="w-2.5 h-2.5 rounded-full bg-[#28C840]"></div>
                        </div>
                    </div>
                    <div class="relative aspect-video bg-black/40">
                        <img src="/img/hero-preview.png" alt="Preview" class="w-full h-full object-cover opacity-90" />
                        <div class="absolute inset-0 bg-gradient-to-tr from-white/5 to-transparent pointer-events-none"></div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SERVICIOS CON LAS NUEVAS CARDS -->
        <section id="servicios" class="max-w-6xl mx-auto py-20">
            <h2 class="text-3xl font-bold text-center text-white mb-16">Nuestros Servicios</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {services.map((service) => (
                    <ServiceCard 
                        title={service.title} 
                        description={service.description} 
                        image={service.image} 
                    />
                ))}
            </div>
        </section>

        <!-- QUIENES SOMOS Y FAQ -->
        <AboutSection />
        <FAQSection />
        
        <!-- CONTACTO CON LOS NUEVOS INPUTS -->
        <section id="contacto" class="max-w-xl mx-auto py-32">
            <div class="bg-surface border border-white/10 p-8 rounded-2xl relative overflow-hidden shadow-2xl">
                <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary via-secondary to-primary opacity-50"></div>
                <h2 class="text-2xl font-bold text-white text-center mb-8">Hablemos de tu proyecto</h2>
                
                <form name="contacto" method="POST" data-netlify="true" class="space-y-6 relative z-10">
                    <input type="hidden" name="form-name" value="contacto" />
                    
                    <MagicInput name="nombre" placeholder="Nombre" />
                    <MagicInput type="email" name="email" placeholder="Email" />
                    <MagicInput type="textarea" name="mensaje" placeholder="¿Qué necesitas?" />
                    
                    <button type="submit" class="w-full bg-white text-black font-bold py-3 rounded-lg hover:bg-gray-200 transition-colors shadow-lg mt-4">
                        Enviar Mensaje
                    </button>
                </form>
            </div>
        </section>

    </main>

    <!-- FOOTER CON REDES SOCIALES -->
    <footer class="border-t border-white/5 bg-black py-12 flex flex-col items-center gap-8">
        <SocialLinks />
        <p class="text-textMuted text-xs">&copy; {new Date().getFullYear()} Byit. Todos los derechos reservados.</p>
    </footer>

</Layout>

<style>
/* ESTILOS DEL BOTÓN UIVERSE (Hover Me) INTEGRADOS */
.button-uiverse {
  font-size: 0.9em;
  padding: 0.6em 1.2em;
  border-radius: 0.5em;
  border: none;
  background-color: #000;
  color: #fff;
  cursor: pointer;
  box-shadow: 2px 2px 3px #000000b4;
  text-decoration: none;
  display: inline-block;
  font-weight: 600;
}

.btn-container-uiverse {
  position: relative;
  padding: 2px;
  background: linear-gradient(90deg, #FF6363, #8B5CF6); /* Colores Byit */
  border-radius: 0.6em;
  transition: all 0.4s ease;
  display: inline-block;
}

.btn-container-uiverse::before {
  content: "";
  position: absolute;
  inset: 0;
  margin: auto;
  border-radius: 0.6em;
  z-index: -10;
  filter: blur(0);
  transition: filter 0.4s ease;
}

.btn-container-uiverse:hover::before {
  background: linear-gradient(90deg, #FF6363, #8B5CF6);
  filter: blur(1.2em);
}
.btn-container-uiverse:active::before {
  filter: blur(0.2em);
}
</style>