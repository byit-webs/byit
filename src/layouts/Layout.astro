---
import Orb from '../components/Orb.jsx';

interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <meta name="theme-color" content="#050505" />
        <meta name="description" content="Byit: Boutique de desarrollo web de alto rendimiento. Diseño personalizado, velocidad extrema y seguridad para negocios que buscan superar a la competencia." />
		
        <link rel="icon" type="image/png" href="/img/favicon.png" />
        <link rel="apple-touch-icon" href="/img/favicon.png">

        <meta property="og:title" content={title} />
        <meta property="og:description" content="Desarrollo web de élite. Velocidad, seguridad y diseño sin plantillas." />
        <meta property="og:type" content="website" />
        <meta property="og:image" content="/img/og-image.png" /> 

		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#050505] text-white font-sans antialiased overflow-x-hidden relative">
		
		<div id="orb-container" class="fixed top-0 left-0 w-full h-[650px] -z-10 transition-opacity duration-500 ease-out opacity-80">
			<Orb 
				client:load 
				hue={0} 
				hoverIntensity={0.6} 
				rotateOnHover={true}
				backgroundColor="#050505"
			/>
		</div>

		<slot />

		<script>
			const orbContainer = document.getElementById('orb-container');
			window.addEventListener('scroll', () => {
				if (!orbContainer) return;
				const scrollY = window.scrollY;
				const fadeEnd = 600;
				let opacity = 0.8 - (scrollY / fadeEnd);
				opacity = Math.max(0, Math.min(0.8, opacity));
				orbContainer.style.opacity = opacity.toString();
			});
		</script>
	</body>
</html>

<style is:global>
    ::-webkit-scrollbar { width: 10px; }
    ::-webkit-scrollbar-track { background: #050505; }
    ::-webkit-scrollbar-thumb { background: #333; border-radius: 5px; }
    ::-webkit-scrollbar-thumb:hover { background: #555; }
</style>