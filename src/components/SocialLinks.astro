<script>
    // Lógica para copiar email
    const copyBtn = document.getElementById('copy-email-btn');
    const tooltip = document.getElementById('email-tooltip');
    
    copyBtn?.addEventListener('click', () => {
        navigator.clipboard.writeText('info@byit.dev').then(() => {
            if(tooltip) tooltip.innerText = "¡Copiado!";
            setTimeout(() => {
                if(tooltip) tooltip.innerText = "Copiar Email";
            }, 2000);
        });
    });
</script>

<style>
/* Estilos Uiverse adaptados */
.social-list {
  display: flex;
  justify-content: center;
  align-items: center;
  list-style: none;
  padding: 0;
  gap: 15px;
}

.icon-content {
  position: relative;
  /* Espacio extra abajo para que el submenú no desaparezca al mover el mouse */
  padding-bottom: 40px; 
  margin-bottom: -40px;
}

.link-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* El Icono Principal Redondo */
.main-icon {
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  color: #fff;
  background-color: #1a1a1a;
  border: 1px solid #333;
  transition: all 0.3s ease-in-out;
  cursor: pointer;
  z-index: 10;
}

.main-icon:hover {
  box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
  border-color: #fff;
}

.main-icon svg {
  position: relative;
  z-index: 1;
  width: 22px;
  height: 22px;
}

/* Efecto de llenado al hover */
.filled {
  position: absolute;
  bottom: 0; left: 0;
  width: 100%; height: 0;
  transition: all 0.3s ease-in-out;
}
.main-icon:hover .filled { height: 100%; }

/* Colores Específicos */
[data-social="linkedin"] .filled { background-color: #0077b5; }
[data-social="github"] .filled { background-color: #6e5494; }
[data-social="email"] .filled { background: linear-gradient(45deg, #FF6363, #8B5CF6); }

/* SUBMENÚ (Dorian / Miguel) */
.submenu {
    position: absolute;
    top: 60px; /* Debajo del icono */
    background: #000;
    border: 1px solid #333;
    border-radius: 8px;
    padding: 5px;
    display: flex;
    flex-direction: column;
    gap: 5px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s;
    min-width: 100px;
    z-index: 20;
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
}

/* Mostrar submenú al hacer hover en el contenedor */
.icon-content:hover .submenu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.sub-link {
    font-size: 13px;
    padding: 8px 12px;
    border-radius: 4px;
    text-decoration: none;
    transition: background 0.2s;
    font-weight: 600;
}
.sub-link:hover {
    background: #1a1a1a;
}

/* TOOLTIP SUPERIOR */
.tooltip {
  position: absolute;
  top: -35px;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  background: #1a1a1a;
  border: 1px solid #333;
  padding: 5px 10px;
  border-radius: 5px;
  opacity: 0;
  visibility: hidden;
  font-size: 12px;
  transition: all 0.3s ease;
  white-space: nowrap;
  pointer-events: none;
}
.icon-content:hover .tooltip {
  opacity: 1;
  visibility: visible;
  top: -45px;
}
</style>