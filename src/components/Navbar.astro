        <button 
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-lg text-gray-600 hover:text-sky-600 hover:bg-sky-50 transition-colors focus:outline-none"
          aria-label="Menú móvil"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-gray-100 mt-2">
      <div class="flex flex-col space-y-1 pt-2">
        <a href="#servicios" class="block px-3 py-2 rounded-md text-base font-medium text-gray-600 hover:text-sky-600 hover:bg-sky-50 transition-colors">
          Servicios
        </a>
        <a href="#quienes-somos" class="block px-3 py-2 rounded-md text-base font-medium text-gray-600 hover:text-sky-600 hover:bg-sky-50 transition-colors">
          Quiénes Somos
        </a>
        <a href="#contacto" class="block px-3 py-2 rounded-md text-base font-medium text-gray-600 hover:text-sky-600 hover:bg-sky-50 transition-colors">
          Contacto
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Lógica del Menú Móvil
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        
        // Opcional: Cambiar el icono de hamburguesa a X si quisieras pulirlo más
        const icon = mobileMenuButton.querySelector('path');
        if (!mobileMenu.classList.contains('hidden')) {
           // Si está abierto, podrías cambiar el path del SVG aquí, 
           // pero por simplicidad lo dejamos así.
        }
      });
    }

    // Cerrar menú al hacer clic en un enlace (Mejora de UX)
    const mobileLinks = mobileMenu?.querySelectorAll('a');
    mobileLinks?.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });
  });
</script>

