    <div class="flex justify-between items-center h-16">
      
      <a href="/" class="text-2xl font-bold text-gray-900 hover:text-blue-600 transition-colors duration-300">
        By It
      </a>
      
      <div class="flex items-center space-x-4">
        <div class="hidden md:flex space-x-8">
          <a href="#servicios" class="text-gray-600 font-medium hover:text-sky-600 transition-colors">Servicios</a>
          <a href="#quienes-somos" class="text-gray-600 font-medium hover:text-sky-600 transition-colors">Quiénes Somos</a>
          <a href="#contacto" class="text-gray-600 font-medium hover:text-sky-600 transition-colors">Contacto</a>
