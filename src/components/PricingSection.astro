<section id="precios" class="py-8 px-4 relative z-10 w-full overflow-visible">
    <div class="max-w-7xl mx-auto w-full">
        <div class="text-center mb-8 px-2 animate-on-scroll fade-up">
            <h2
                class="font-fact text-4xl md:text-6xl text-white mb-4 leading-tight title-glow"
            >
                Planes y Precios
            </h2>
            <p class="text-gray-400 max-w-xl mx-auto text-sm md:text-base">
