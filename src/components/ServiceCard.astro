---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<div class="card-uiverse">
  <!-- Fondo de la imagen -->
  <div class="absolute top-4 left-4 w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center border border-white/10 z-20 backdrop-blur-sm">
      <img src={image} alt={title} class="w-8 h-8 object-contain" />
  </div>

  <div class="content-box z-20 mt-12">
      <p class="heading">{title}</p>
      <p class="desc">{description}</p>
  </div>
</div>

<style>
/* Adaptaci√≥n del CSS de Uiverse a Byit */
.card-uiverse {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 260px;
  background-color: #0A0A0A; /* surface */
  display: flex;
  flex-direction: column;
  justify-content: end;
  padding: 20px;
  gap: 12px;
  border-radius: 12px;
  cursor: pointer;
  color: white;
  overflow: hidden;
  border: 1px solid rgba(255,255,255,0.05);
  transition: transform 0.3s;
}

.card-uiverse:hover {
    transform: translateY(-5px);
}

.card-uiverse::before {
  content: '';
  position: absolute;
  inset: 0;
  left: -5px;
  margin: auto;
  width: 105%;
  height: 105%;
  border-radius: 14px;
  /* GRADIENTE BYIT: Rojo a Violeta */
  background: linear-gradient(-45deg, #FF6363 0%, #8B5CF6 100% );
  z-index: -10;
  pointer-events: none;
  transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.card-uiverse::after {
  content: "";
  z-index: -1;
  position: absolute;
  inset: 0;
  /* GRADIENTE BYIT GLOW */
  background: linear-gradient(-45deg, #FF6363 0%, #8B5CF6 100% );
  transform: translate3d(0, 0, 0) scale(0.95);
  filter: blur(20px);
}

.heading {
  font-size: 20px;
  text-transform: capitalize;
  font-weight: 700;
  margin-bottom: 8px;
}

.desc {
  font-size: 14px;
  color: #A1A1AA; /* textMuted */
  line-height: 1.5;
}

.card-uiverse:hover::after {
  filter: blur(30px);
}

.card-uiverse:hover::before {
  transform: rotate(-90deg) scaleX(1.34) scaleY(0.77);
}
</style>